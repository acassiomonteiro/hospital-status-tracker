# Identificador do Ambiente (windows ou wsl)
COMPOSE_PROJECT_NAME=hospital-windows

# Portas Externas (evita conflitos se ambos ambientes estiverem rodando)
WEB_PORT=8000
DB_EXTERNAL_PORT=5432

# Django Settings
SECRET_KEY=django-insecure-dev-key-change-in-production-123456789
DEBUG=1
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration (PostgreSQL)
DB_NAME=hospital_db
DB_USER=hospital_admin
DB_PASSWORD=your_secure_password_here
DB_HOST=db
DB_PORT=5432

# PostgreSQL Container Environment Variables
POSTGRES_DB=hospital_db
POSTGRES_USER=hospital_admin
POSTGRES_PASSWORD=your_secure_password_here

# Django Database Configuration
DATABASE_ENGINE=django.db.backends.postgresql

# Optional: Timezone
TIME_ZONE=America/Sao_Paulo
LANGUAGE_CODE=pt-br

# Django Superuser (criaÃ§Ã£o automÃ¡tica)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=your_admin_password_here
